@{
    ViewData["Title"] = "Home Page";
}
@model List<TravelLibrary.Models.Response.BookResponseModel>;

<div class="text-center">
    <h1 class="display-4">Travel Library</h1>
    <form class="form-inline" asp-action="Index" asp-controller="Home">
        <input class="form-control mr-sm-2" type="search" placeholder="Buscar por titulo" name="nameBook">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>
<br />
<div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ISBN</th>
                <th scope="col">TITULO</th>
                <th scope="col">Editorial</th>
                <th scope="col">INFO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(m => book.Isbn)</th>
                        <td>@Html.DisplayFor(m => book.Titlle)</td>
                        <td>@Html.DisplayFor(m => book.EditorialName)</td>
                        <td><a class="btn btn-outline-info" asp-controller="Home" asp-action="GetInfo" asp-route-id="@book.Isbn" role="button">Info</a></td>
                    </tr>
                }
        </tbody>
    </table>
</div>

